<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Hint Text (for Input Fields) -->
    <style name="CustomHintText" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">25dp</item>
    </style>

    <!-- Define Toolbar style for use in all themes -->
    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.Material3.Light</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:popupTheme">@style/CustomPopupMenu</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CustomPopupMenu" parent="ThemeOverlay.Material3.Light">
        <item name="android:popupBackground">?attr/colorSurface</item>
    </style>

    <style name="Toolbar.TitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Bottom Navigation Style to ensure it matches the theme -->
    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="itemIconTint">?attr/colorOnPrimary</item>
        <item name="itemTextColor">?attr/colorOnPrimary</item>
    </style>
</resources>