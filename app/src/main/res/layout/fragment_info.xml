<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"> <!-- FIX: Ensures 16dp margin from screen top -->

        <!-- Material Card for Denominations -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:id="@+id/denomination_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Cash Denominations"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp" />

                <!-- First Row: $1, $2, $5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$1">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="8dp" android:layout_height="0dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$2">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="8dp" android:layout_height="0dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$5">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Second Row: $10, $20, $50 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$10">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="8dp" android:layout_height="0dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$20">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_20"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="8dp" android:layout_height="0dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$50">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_50"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Third Row: $100 (Centered Below $20) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:paddingHorizontal="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$100">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_100"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Total Amount Display -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/total_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: $0.00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
