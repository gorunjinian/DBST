<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/rounded_popup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp">

        <!-- Material Card for Denominations -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- First Row: $1, $2, $5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$1">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="8dp" android:layout_height="0dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$2">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="8dp" android:layout_height="0dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$5">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Second Row: $10, $20, $50 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$10">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_10"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="8dp" android:layout_height="0dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$20">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_20"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="8dp" android:layout_height="0dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$50">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_50"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Third Row: $100 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:paddingHorizontal="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="$100">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_100"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Total Amount Display -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Total Amount">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/total_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:inputType="none"
                        android:focusable="false"
                        android:background="@null"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Close Button at the Bottom -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/close_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/close_button_text"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button"
            app:cornerRadius="50dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</ScrollView>
