<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.DBST" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- Status Bar should match Toolbar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Toolbar & Popup Menu Fix -->
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="android:toolbarStyle">@style/CustomToolbar</item>
    </style>

    <style name="Theme.DBST" parent="Base.Theme.DBST" />

    <!-- Custom Toolbar -->
    <style name="CustomToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Custom Popup Menu (Dark Mode Fix) -->
    <style name="CustomPopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">?attr/colorSurfaceContainerHigh</item>
        <item name="android:textColorPrimary">?attr/colorOnSurfaceVariant</item>
    </style>
</resources>
