<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DBST" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Fix Status Bar Color -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Fix Navigation Bar Color (Set Dark Color) -->
        <item name="android:navigationBarColor">@color/bottom_nav_dark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Set Bottom Navigation Dark Theme -->
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationDark</item>
    </style>
</resources>
